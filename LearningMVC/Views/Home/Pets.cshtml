@model IEnumerable<LearningMVC.Models.PetModel>

@{
    ViewData["Title"] = "Pets";
}

<h1>List of your pets</h1>

<p>
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Home")'">Add new pet</button>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Age
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAlive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @{int age = DateTime.Now.Year - item.BirthYear;}
                @age
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAlive)
            </td>
            <td>
               <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Home",new { id=item.Id })'">Edit</button> |
               <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Home",new { id=item.Id })'">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>

<form asp-action='LogOut' id='LogOut'> 
    <input class='btn btn-dark' id='logoutbtn' type='submit' value='Log out' /> 
</form>
                     
                   
